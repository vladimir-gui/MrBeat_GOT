#: import track track
#: import play_indicator play_indicator

MainWidget:  # Widget principal

<ControlButton@Button>:

<BPM@BoxLayout>:

<MainWidget>:
    tracks_layout: tracks_layout
    play_indicator_widget:play_indicator_widget
    BoxLayout:
        orientation: "vertical"
        # top layout rework
        RelativeLayout:
            size_hint_y: None
            height: dp(60)
            Image:
                source:"images/top_background.png"
                allow_stretch: True
                keep_ratio: False
            Image:
                source:"images/logo.png"
                allow_stretch: True
                size_hint_x: None
                width: dp(230)
            BoxLayout:
                size_hint_x: None
                pos_hint: {"center_x": 0.5}
                width: dp(120)
                ControlButton:
                    text: "PLAY"
                    on_press: root.on_play_button_pressed()
                ControlButton:
                    text: "STOP"
                    on_press: root.on_stop_button_pressed()
            BoxLayout: # gestion des boutons de controles
                size_hint_x: None
                width: dp(180)
                pos_hint: {"right": 1}
                ControlButton:
                    text: "-"
                    size_hint_x: None
                    width: dp(50)
                    on_press: root.bpm -= 5
                Label:
                    text: str(root.bpm)
                ControlButton:
                    text: "+"
                    size_hint_x: None
                    width: dp(50)
                    on_press: root.bpm += 5

        # bottom layout
        RelativeLayout:
            Image:
                source: "images/background.jpg"
                allow_stretch: True
                keep_ratio: False
            BoxLayout:
                x: dp(16)
                y: dp(16)
                size_hint: None, None
                size: (self.parent.width-dp(32), self.parent.height-dp(32))
                orientation: "vertical"
                PlayIndicatorWidget:
                    id: play_indicator_widget
                    size_hint_y: None
                    height: dp(8)
                    left_align: root.TRACK_STEPS_LEFT_ALIGN
                BoxLayout:  # gestion des tracks
                    id : tracks_layout
                    orientation: "vertical"